{
  "scripts": {
    "all:test:run": "cypress run --browser chrome --spec 'cypress/tests/**' --config video=false --reporter mochawesome --reporter-options reportDir=reports/all,html=false,overwrite=false,json=true",
    "regression": "cypress run --browser chrome --spec 'cypress/tests/regression/**' --config video=false --reporter mochawesome --reporter-options reportDir=reports/regression,html=false,overwrite=false,json=true",
    "smoke": "cypress run --browser chrome --spec 'cypress/tests/smoke/**' --config video=false --reporter mochawesome --reporter-options reportDir=reports/smoke,html=false,overwrite=false,json=true",
    "merge:report": "npx mochawesome-merge \"cypress/results/*.json\" > mochawesome.json && npx marge mochawesome.json",
    "merge:regression:results": "npx mochawesome-merge \"reports/regression/*.json\" > reports/regression.json",
    "merge:smoke:results": "npx mochawesome-merge \"reports/smoke/*.json\" > reports/smoke.json"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "cypress": "^13.7.2",
    "cypress-xpath": "^2.0.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  }
}
